import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>

---
import { getCollection } from "astro:content";

// Fetch announcements
const allAnnouncements = await getCollection("announcements");

// Sort by date descending
const sortedAnnouncements = allAnnouncements.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);

// Take latest 5
const latestAnnouncements = sortedAnnouncements.slice(0, 5);
---

{
    latestAnnouncements.length > 0 && (
        <section class="announcements-section">
            <h2 class="section-title">Latest Updates</h2>
            <div class="announcements-list">
                {latestAnnouncements.map((item) => (
                    <article class="announcement-card">
                        <a
                            href={`/announcements/${item.slug}`}
                            class="card-link"
                        >
                            <div class="content">
                                <div class="meta">
                                    <span class="date">
                                        {item.data.date
                                            ? new Date(
                                                  item.data.date,
                                              ).toLocaleDateString("en-US", {
                                                  year: "numeric",
                                                  month: "short",
                                                  day: "numeric",
                                              })
                                            : ""}
                                    </span>
                                    {item.data.category && (
                                        <span
                                            class={`type-badge ${item.data.category}`}
                                        >
                                            {item.data.category}
                                        </span>
                                    )}
                                </div>
                                <h3 class="title">{item.data.title}</h3>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
            <div class="view-all-container">
                <a href="/announcements" class="view-all-link">
                    View all updates &rarr;
                </a>
            </div>
        </section>
    )
}

<style>
    .announcements-section {
        margin-bottom: 60px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 20px;
    }

    .section-title {
        text-align: center;
        margin-bottom: 24px;
        font-size: 28px;
        font-weight: 700;
        color: var(--c-text);
    }

    .announcements-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .announcement-card {
        background: white;
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 8px;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease,
            border-color 0.2s ease;
    }

    .announcement-card:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-color: rgba(0, 0, 0, 0.1);
    }

    .card-link {
        display: block;
        padding: 16px;
        text-decoration: none;
        color: inherit;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .content {
        flex: 1;
    }

    .meta {
        font-size: 13px;
        color: #666;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .type-badge {
        font-size: 10px;
        padding: 1px 6px;
        border-radius: 4px;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.02em;
    }

    .type-badge.update {
        background-color: #e6f6ff;
        color: #0070f3;
    }
    .type-badge.event {
        background-color: #f3e8ff;
        color: #7928ca;
    }
    .type-badge.general {
        background-color: #f0f0f0;
        color: #555;
    }

    .title {
        margin: 0;
        font-size: 16px;
        font-weight: 600;
        line-height: 1.4;
        color: var(--c-text);
    }

    .view-all-container {
        text-align: center;
        margin-top: 20px;
    }

    .view-all-link {
        font-size: 14px;
        font-weight: 500;
        color: var(--c-link);
        text-decoration: none;
    }
    .view-all-link:hover {
        text-decoration: underline;
    }
</style>

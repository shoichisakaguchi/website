---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import defaultAvatar from "../../assets/images/default-avatar.png";

export const prerender = true;

const people = await getCollection("people");
const summits = await getCollection("summits");

// Build reverse index: personSlug -> [unique organizer years] (sorted descending)
const organizerYearsMap = new Map<string, string[]>();
for (const summit of summits) {
	const year = summit.data.year;
	if (!year) continue;
	const organizers = summit.data.organizers ?? [];
	for (const org of organizers) {
		const personSlug = org.person;
		if (!personSlug) continue;
		const years = organizerYearsMap.get(personSlug) ?? [];
		if (!years.includes(year)) {
			years.push(year);
		}
		organizerYearsMap.set(personSlug, years);
	}
}
// Sort each person's years descending
for (const [slug, years] of organizerYearsMap) {
	organizerYearsMap.set(slug, years.sort((a, b) => b.localeCompare(a)));
}

const sortedPeople = people.sort((a, b) =>
	a.data.name.localeCompare(b.data.name),
);

const normalizeHandle = (value?: string) =>
	value ? value.trim().replace(/^@/, "") : "";

// Normalize GitHub value to URL
const normalizeGitHub = (value?: string): string | null => {
	if (!value) return null;
	const trimmed = value.trim();
	if (!trimmed) return null;
	// If it's already a URL, use as-is
	if (trimmed.startsWith("http://") || trimmed.startsWith("https://")) {
		return trimmed;
	}
	// Otherwise treat as username
	return `https://github.com/${trimmed}`;
};

// Extract GitHub username from URL or value for aria-label
const getGitHubLabel = (value?: string): string => {
	if (!value) return "";
	const trimmed = value.trim();
	if (trimmed.startsWith("https://github.com/")) {
		return trimmed.replace("https://github.com/", "github.com/");
	}
	if (trimmed.startsWith("http://github.com/")) {
		return trimmed.replace("http://github.com/", "github.com/");
	}
	return `github.com/${trimmed}`;
};
---

<Layout>
	<div class="container page-content">
		<h1 class="page-title">Organizers (Current & Past)</h1>
		<div class="intro-text">
			<p>
				This page lists people who have contributed to organizing the RdRp Summit over time.
			</p>
		</div>
		<p class="affiliation-disclaimer">
			Affiliations are provided for reference and may not always reflect the most recent position.
		</p>
		<div class="people-grid">
			{
				sortedPeople.map((person) => {
					const {
						name,
						affiliation,
						country,
						image,
						websiteUrl,
						blueskyId,
						xId,
						orcid,
						linkedin,
						github,
					} = person.data;
					const blueskyHandle = normalizeHandle(blueskyId);
					const xHandle = normalizeHandle(xId);
					const githubUrl = normalizeGitHub(github);
					const organizerYears = organizerYearsMap.get(person.id) ?? [];
					const hasAnyLink = websiteUrl || orcid || githubUrl || linkedin || xHandle || blueskyHandle;

					return (
						<article class="person-card">
							<div class="photo-wrapper">
								{image ? (
									<Image
										src={image}
										alt={name}
										width={160}
										height={160}
										class="person-photo"
									/>
								) : (
									<img
										src={defaultAvatar.src}
										alt={name}
										width="160"
										height="160"
										class="person-photo"
										loading="lazy"
									/>
								)}
							</div>
							<h3 class="person-name">{name}</h3>
							<p class="person-affiliation">{affiliation}</p>
							{country && <p class="person-country">{country}</p>}

							{hasAnyLink && (
								<div class="social-links">
									{/* Icon order: Website → ORCID → LinkedIn → X → Bluesky */}
									{websiteUrl && (
										<a
											href={websiteUrl}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`Website: ${websiteUrl}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<circle
													cx="12"
													cy="12"
													r="9"
													fill="none"
													stroke="currentColor"
													stroke-width="1.5"
												/>
												<path
													d="M3 12h18M12 3a15 15 0 0 1 0 18M12 3a15 15 0 0 0 0 18"
													fill="none"
													stroke="currentColor"
													stroke-width="1.2"
												/>
											</svg>
										</a>
									)}
									{orcid && (
										<a
											href={`https://orcid.org/${orcid}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`ORCID: ${orcid}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zM8.5 7.5c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1zm0 3h1v7h-1v-7zm3.5 0h2.5c2.481 0 4 1.519 4 4s-1.519 3-4 3H12v-7zm1 1v5h1.5c1.933 0 3-1.067 3-2.5s-1.067-2.5-3-2.5H13z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{githubUrl && (
										<a
											href={githubUrl}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`GitHub: ${getGitHubLabel(github)}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{linkedin && (
										<a
											href={linkedin}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`LinkedIn: ${linkedin}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{xHandle && (
										<a
											href={`https://x.com/${xHandle}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`X (Twitter): @${xHandle}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{blueskyHandle && (
										<a
											href={`https://bsky.app/profile/${blueskyHandle}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`Bluesky: ${blueskyHandle}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565c-.5.215-.718.78-.54 1.243 2.053 5.33 4.456 10.111 6.637 12.425.667.705 1.636 1.372 2.766 1.766-3.79-.174-8.086 1.132-8.52 3.864-.523 3.3 5.405 2.11 5.405 2.11 2.378-.49 4.887-2.126 6.35-4.22 1.463 2.094 3.972 3.73 6.35 4.22 0 0 5.928 1.19 5.405-2.11-.434-2.732-4.73-4.038-8.52-3.864 1.13-.394 2.099-1.061 2.766-1.766 2.181-2.314 4.584-7.095 6.637-12.425.178-.463-.04-.992-.54-1.243-.659-.299-1.664-.621-4.3 1.24-2.752 1.942-5.711 5.881-6.798 7.995z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
								</div>
							)}

							{organizerYears.length > 0 && (
								<div class="organizer-years">
									{organizerYears.map((year) => (
										<a
											href={`/summits/rdrp-summit-${year}`}
											class="year-badge"
											aria-label={`Organizer · RdRp Summit ${year}`}
										>
											{year}
										</a>
									))}
								</div>
							)}
						</article>
					);
				})
			}
		</div>
	</div>
</Layout>

<style>
	.page-content {
		max-width: 1080px;
		margin: 0 auto;
		padding-bottom: 80px;
	}

	.page-title {
		margin-top: 40px;
		margin-bottom: 24px;
		text-align: center;
	}

	.intro-text {
		max-width: 640px;
		margin: 0 auto 24px;
		text-align: center;
		color: var(--c-text, #1d1d1f);
		font-size: 1em;
		line-height: 1.6;
	}

	.intro-text p {
		margin: 0 0 0.75em;
	}

	.intro-text p:last-child {
		margin-bottom: 0;
	}

	.affiliation-disclaimer {
		text-align: center;
		color: var(--c-text-secondary, #666);
		font-size: 0.9em;
		font-style: italic;
		margin-bottom: 48px;
	}

	.people-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 24px;
	}

	@media (max-width: 640px) {
		.people-grid {
			grid-template-columns: 1fr;
		}
	}

	.person-card {
		background: #fff;
		border-radius: 16px;
		padding: 20px 18px;
		border: 1px solid rgba(0, 0, 0, 0.05);
		box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
		text-align: center;
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease;
	}

	.person-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
	}

	.photo-wrapper {
		width: 160px;
		height: 160px;
		margin: 0 auto 16px;
		border-radius: 50%;
		overflow: hidden;
		background-color: #f0f2f6;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.person-photo {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.person-name {
		font-size: 1.1em;
		margin: 0 0 6px;
		font-weight: 600;
		color: var(--c-text, #1d1d1f);
	}

	.person-name a {
		color: inherit;
		text-decoration: none;
	}

	.person-name a:hover {
		text-decoration: underline;
	}

	.person-affiliation {
		color: var(--c-text-secondary, #666);
		font-size: 0.9em;
		margin: 0;
		line-height: 1.4;
	}

	.person-country {
		color: var(--c-text-secondary, #888);
		font-size: 0.85em;
		margin: 4px 0 0;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 10px;
		margin-top: 12px;
		color: #6b7280;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: 50%;
		background: rgba(0, 0, 0, 0.04);
		color: inherit;
		transition:
			background-color 0.2s ease,
			color 0.2s ease;
	}

	.social-link svg {
		width: 18px;
		height: 18px;
	}

	.social-link:hover {
		background: rgba(0, 0, 0, 0.08);
		color: var(--c-text, #1d1d1f);
	}

	.organizer-years {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 6px;
		margin-top: 12px;
	}

	.year-badge {
		display: inline-block;
		padding: 3px 10px;
		font-size: 0.75em;
		font-weight: 500;
		color: #4b5563;
		background: #f3f4f6;
		border-radius: 12px;
		text-decoration: none;
		transition:
			background-color 0.2s ease,
			color 0.2s ease;
	}

	.year-badge:hover {
		background: #e5e7eb;
		color: #1f2937;
	}
</style>

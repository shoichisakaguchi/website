---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import defaultAvatar from "../../assets/images/default-avatar.png";

export const prerender = true;

const people = await getCollection("people");
const sortedPeople = people.sort((a, b) =>
	a.data.name.localeCompare(b.data.name),
);

const normalizeHandle = (value?: string) =>
	value ? value.trim().replace(/^@/, "") : "";
---

<Layout>
	<div class="container page-content">
		<h1 class="page-title">Organizers (Current & Past)</h1>
		<div class="intro-text">
			<p>
				This page lists people who have contributed to organizing and supporting the RdRp Summit over time.
			</p>
		</div>
		<p class="affiliation-disclaimer">
			Affiliations are provided for reference and may not always reflect the most recent position.
		</p>
		<div class="people-grid">
			{
				sortedPeople.map((person) => {
					const {
						name,
						affiliation,
						country,
						image,
						websiteUrl,
						blueskyId,
						xId,
						orcid,
					} = person.data;
					const blueskyHandle = normalizeHandle(blueskyId);
					const xHandle = normalizeHandle(xId);
					const hasAnyLink = websiteUrl || orcid || xHandle || blueskyHandle;

					return (
						<article class="person-card">
							<div class="photo-wrapper">
								{image ? (
									<Image
										src={image}
										alt={name}
										width={160}
										height={160}
										class="person-photo"
									/>
								) : (
									<img
										src={defaultAvatar.src}
										alt={name}
										width="160"
										height="160"
										class="person-photo"
										loading="lazy"
									/>
								)}
							</div>
							<h3 class="person-name">{name}</h3>
							<p class="person-affiliation">{affiliation}</p>
							{country && <p class="person-country">{country}</p>}

							{hasAnyLink && (
								<div class="social-links">
									{/* Icon order: Website → ORCID → X → Bluesky */}
									{websiteUrl && (
										<a
											href={websiteUrl}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`Website: ${websiteUrl}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<circle
													cx="12"
													cy="12"
													r="9"
													fill="none"
													stroke="currentColor"
													stroke-width="1.5"
												/>
												<path
													d="M3 12h18M12 3a15 15 0 0 1 0 18M12 3a15 15 0 0 0 0 18"
													fill="none"
													stroke="currentColor"
													stroke-width="1.2"
												/>
											</svg>
										</a>
									)}
									{orcid && (
										<a
											href={`https://orcid.org/${orcid}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`ORCID: ${orcid}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zM8.5 7.5c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1zm0 3h1v7h-1v-7zm3.5 0h2.5c2.481 0 4 1.519 4 4s-1.519 3-4 3H12v-7zm1 1v5h1.5c1.933 0 3-1.067 3-2.5s-1.067-2.5-3-2.5H13z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{xHandle && (
										<a
											href={`https://x.com/${xHandle}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`X (Twitter): @${xHandle}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
									{blueskyHandle && (
										<a
											href={`https://bsky.app/profile/${blueskyHandle}`}
											target="_blank"
											rel="noopener noreferrer"
											class="social-link"
											aria-label={`Bluesky: ${blueskyHandle}`}
										>
											<svg
												viewBox="0 0 24 24"
												aria-hidden="true"
											>
												<path
													d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565c-.5.215-.718.78-.54 1.243 2.053 5.33 4.456 10.111 6.637 12.425.667.705 1.636 1.372 2.766 1.766-3.79-.174-8.086 1.132-8.52 3.864-.523 3.3 5.405 2.11 5.405 2.11 2.378-.49 4.887-2.126 6.35-4.22 1.463 2.094 3.972 3.73 6.35 4.22 0 0 5.928 1.19 5.405-2.11-.434-2.732-4.73-4.038-8.52-3.864 1.13-.394 2.099-1.061 2.766-1.766 2.181-2.314 4.584-7.095 6.637-12.425.178-.463-.04-.992-.54-1.243-.659-.299-1.664-.621-4.3 1.24-2.752 1.942-5.711 5.881-6.798 7.995z"
													fill="currentColor"
												/>
											</svg>
										</a>
									)}
								</div>
							)}
						</article>
					);
				})
			}
		</div>
	</div>
</Layout>

<style>
	.page-content {
		max-width: 1080px;
		margin: 0 auto;
		padding-bottom: 80px;
	}

	.page-title {
		margin-top: 40px;
		margin-bottom: 24px;
		text-align: center;
	}

	.intro-text {
		max-width: 640px;
		margin: 0 auto 24px;
		text-align: center;
		color: var(--c-text, #1d1d1f);
		font-size: 1em;
		line-height: 1.6;
	}

	.intro-text p {
		margin: 0 0 0.75em;
	}

	.intro-text p:last-child {
		margin-bottom: 0;
	}

	.affiliation-disclaimer {
		text-align: center;
		color: var(--c-text-secondary, #666);
		font-size: 0.9em;
		font-style: italic;
		margin-bottom: 48px;
	}

	.people-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 24px;
	}

	@media (max-width: 640px) {
		.people-grid {
			grid-template-columns: 1fr;
		}
	}

	.person-card {
		background: #fff;
		border-radius: 16px;
		padding: 20px 18px;
		border: 1px solid rgba(0, 0, 0, 0.05);
		box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
		text-align: center;
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease;
	}

	.person-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
	}

	.photo-wrapper {
		width: 160px;
		height: 160px;
		margin: 0 auto 16px;
		border-radius: 50%;
		overflow: hidden;
		background-color: #f0f2f6;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.person-photo {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.person-name {
		font-size: 1.1em;
		margin: 0 0 6px;
		font-weight: 600;
		color: var(--c-text, #1d1d1f);
	}

	.person-name a {
		color: inherit;
		text-decoration: none;
	}

	.person-name a:hover {
		text-decoration: underline;
	}

	.person-affiliation {
		color: var(--c-text-secondary, #666);
		font-size: 0.9em;
		margin: 0;
		line-height: 1.4;
	}

	.person-country {
		color: var(--c-text-secondary, #888);
		font-size: 0.85em;
		margin: 4px 0 0;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 10px;
		margin-top: 12px;
		color: #6b7280;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: 50%;
		background: rgba(0, 0, 0, 0.04);
		color: inherit;
		transition:
			background-color 0.2s ease,
			color 0.2s ease;
	}

	.social-link svg {
		width: 18px;
		height: 18px;
	}

	.social-link:hover {
		background: rgba(0, 0, 0, 0.08);
		color: var(--c-text, #1d1d1f);
	}
</style>

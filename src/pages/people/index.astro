---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

const people = await getCollection('people');
// Sorting by name implicitly or we could add an explicit order field. 
// For now, let's keep it default or sort by name.
const sortedPeople = people.sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<Layout>
	<div class="container page-content">
		<h1 class="page-title">People</h1>
		<div class="people-grid">
			{sortedPeople.map(person => (
				<div class="person-card">
                    <div class="photo-wrapper">
                        {person.data.photo ? (
                            <img src={person.data.photo} alt={person.data.name} class="person-photo" />
                        ) : (
                            <div class="placeholder-photo" />
                        )}
                    </div>
					<h2 class="person-name">{person.data.name}</h2>
                    {person.data.affiliation && <p class="person-affiliation">{person.data.affiliation}</p>}
				</div>
			))}
		</div>
	</div>
</Layout>

<style>
	.page-content {
		max-width: 980px;
		margin: 0 auto;
	}

	.page-title {
		margin-top: 40px;
		margin-bottom: 60px;
		text-align: center;
	}

	.people-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		gap: 40px;
        justify-content: center;
	}

	.person-card {
		text-align: center;
	}

    .photo-wrapper {
        width: 150px;
        height: 150px;
        margin: 0 auto 20px;
        border-radius: 50%;
        overflow: hidden;
        background-color: #f0f0f0;
    }

    .person-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .placeholder-photo {
        width: 100%;
        height: 100%;
        background-color: #e0e0e0;
    }

	.person-name {
		font-size: 1.25em;
		margin: 0 0 8px;
        font-weight: 600;
	}

	.person-affiliation {
		color: var(--c-text-secondary, #666);
		font-size: 0.9em;
        margin: 0;
        line-height: 1.4;
	}
</style>

---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

const posts = await getCollection('posts');
---

<Layout>
	<div class="container page-content">
		<h1 class="page-title">Blog Posts</h1>
		<div class="content-wrapper">
			<ul class="posts-list">
				{posts.map(post => (
					<li>
						<a href={`/posts/${post.slug}`}>{post.data.title}</a>
					</li>
				))}
			</ul>
		</div>
	</div>
</Layout>

<style>
	.page-content {
		max-width: 720px;
		margin: 0 auto;
	}

	.page-title {
		margin-top: 40px;
		margin-bottom: 40px;
		text-align: center;
	}

	.content-wrapper {
		font-size: 19px;
		line-height: 1.6;
		color: #333;
	}

	.posts-list {
		list-style: none;
		padding: 0;
	}

	.posts-list li {
		margin-bottom: 1em;
	}

	.posts-list a {
		text-decoration: none;
		color: var(--c-link);
		font-size: 1.2em;
	}

	.posts-list a:hover {
		text-decoration: underline;
	}
</style>

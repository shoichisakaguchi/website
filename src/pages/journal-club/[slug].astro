---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const items = await getCollection('journal-club');
  return items.map(item => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await item.render();
const { data } = item;

// Helper to get speaker display string
function getSpeakerDisplay(): string {
    if (data.speakerName) {
        return data.speakerAffiliation
            ? `${data.speakerName} (${data.speakerAffiliation})`
            : data.speakerName;
    }
    return data.speaker || '';
}

// Get all links (new format or legacy)
function getAllLinks(): { label: string; url: string; isPrimary: boolean }[] {
    if (data.links && data.links.length > 0) {
        return data.links;
    }
    if (data.paperUrl) {
        return [{ label: 'Paper', url: data.paperUrl, isPrimary: true }];
    }
    return [];
}

const speakerDisplay = getSpeakerDisplay();
const allLinks = getAllLinks();
---

<Layout title={item.data.title}>
	<div class="container page-content">
		<div class="back-link">
			<a href="/journal-club">‚Üê Back to Journal Club</a>
		</div>
        <header class="post-header">
            <div class="meta">
                <time>{item.data.date.toLocaleDateString()}</time>
            </div>
            <h1 class="page-title">{item.data.title}</h1>

            <div class="details">
                {speakerDisplay && <div class="detail-item"><strong>Speaker:</strong> {speakerDisplay}</div>}
            </div>

            {/* Links section */}
            {allLinks.length > 0 && (
                <div class="links-section">
                    {allLinks.map(link => (
                        <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class={`link-button ${link.isPrimary ? 'primary' : ''}`}
                        >
                            {link.label} &nearr;
                        </a>
                    ))}
                </div>
            )}

            {/* Action buttons */}
            <div class="action-buttons">
                {data.calendarUrl && (
                    <a
                        href={data.calendarUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="action-button calendar-button"
                    >
                        Add to Calendar
                    </a>
                )}
                {data.zoomUrl && data.showZoomLink && (
                    <a
                        href={data.zoomUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="action-button zoom-button"
                    >
                        Join Zoom
                    </a>
                )}
                {data.zoomUrl && !data.showZoomLink && (
                    <span class="zoom-note">Zoom link available via Slack</span>
                )}
            </div>
        </header>

		<div class="content-wrapper">
			<article>
				<Content />
			</article>
		</div>
	</div>
</Layout>

<style>
	.page-content {
		max-width: 720px;
		margin: 0 auto;
	}

	.page-title {
		margin-top: 10px;
		margin-bottom: 20px;
        text-align: center;
	}
    
    .post-header {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .meta {
        color: var(--c-text-light, #666);
        margin-bottom: 10px;
        text-align: center;
    }
    
    .details {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
        font-size: 1.1em;
    }

    .detail-item a {
        color: var(--c-link, #0070f3);
        text-decoration: none;
    }

    .links-section {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .link-button {
        display: inline-block;
        padding: 8px 16px;
        border: 1px solid var(--c-link, #0070f3);
        border-radius: 6px;
        color: var(--c-link, #0070f3);
        text-decoration: none;
        font-size: 0.95em;
        transition: background-color 0.2s, color 0.2s;
    }

    .link-button:hover {
        background-color: var(--c-link, #0070f3);
        color: white;
        text-decoration: none;
    }

    .link-button.primary {
        background-color: var(--c-link, #0070f3);
        color: white;
    }

    .link-button.primary:hover {
        opacity: 0.9;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 24px;
        flex-wrap: wrap;
        align-items: center;
    }

    .action-button {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95em;
        transition: opacity 0.2s;
    }

    .action-button:hover {
        opacity: 0.8;
        text-decoration: none;
    }

    .calendar-button {
        background-color: #4285f4;
        color: white;
    }

    .zoom-button {
        background-color: #2d8cff;
        color: white;
    }

    .zoom-note {
        font-size: 0.9em;
        color: var(--c-text-secondary, #666);
        font-style: italic;
    }

	.content-wrapper {
		font-size: 18px;
		line-height: 1.6;
		color: var(--c-text, #333);
	}

	.back-link {
		margin-top: 40px;
	}

	.back-link a {
		color: var(--c-text-light, #666);
		text-decoration: none;
		font-size: 0.9em;
	}

	.back-link a:hover {
		text-decoration: underline;
	}

  /* Basic styling for content */
  article :global(h2) {
    margin-top: 2em;
    font-size: 1.5em;
    font-weight: 600;
  }
  
  article :global(h3) {
      margin-top: 1.5em;
      font-size: 1.25em;
      font-weight: 600;
  }

  article :global(p) {
    margin-bottom: 1em;
  }
  
  article :global(ul), article :global(ol) {
    margin-bottom: 1em;
    padding-left: 2em;
  }
</style>

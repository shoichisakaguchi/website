---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout>
	<div class="container">
		<h1 class="text-center page-title">Past Summits</h1>
		
		<div class="summit-list">
			<div class="summit-item">
				<div class="summit-date">2024</div>
				<div class="summit-info">
					<h2>NeoRdRp Summit 2024</h2>
					<p>Held in Tokyo, Japan. Focus on AI-driven sequence discovery.</p>
					<a href="#">View Proceedings &rarr;</a>
				</div>
			</div>
			
			<div class="summit-item">
				<div class="summit-date">2023</div>
				<div class="summit-info">
					<h2>Global RdRp Workshop</h2>
					<p>Online Symposium. Establishing the standard HMM profiles.</p>
					<a href="#">View Proceedings &rarr;</a>
				</div>
			</div>

			<div class="summit-item">
				<div class="summit-date">2022</div>
				<div class="summit-info">
					<h2>Inaugural Meeting</h2>
					<p>Setting the foundation for the community.</p>
					<a href="#">View Proceedings &rarr;</a>
				</div>
			</div>
		</div>
	</div>
</Layout>

<style>
	.page-title {
		margin-bottom: 60px;
	}

	.summit-list {
		max-width: 800px;
		margin: 0 auto;
	}

	.summit-item {
		display: flex;
		flex-direction: column;
		padding: 40px 0;
		border-bottom: 1px solid var(--c-divider);
	}

	.summit-item:last-child {
		border-bottom: none;
	}

	@media (min-width: 600px) {
		.summit-item {
			flex-direction: row;
			gap: 40px;
		}
	}

	.summit-date {
		font-size: 24px;
		font-weight: 700;
		color: var(--c-text-secondary);
		flex-basis: 120px;
		flex-shrink: 0;
	}

	.summit-info h2 {
		margin-top: 0;
		font-size: 24px;
		margin-bottom: 10px;
	}
</style>

---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout>
	<section class="hero text-center">
		<h1 class="hero-title">rdrp.io</h1>
		<p class="hero-subtitle">The global hub for RdRp research and collaboration.</p>
		<div class="cta-group">
			<a href="/about" class="button primary">Learn more</a>
			<a href="/summits" class="button secondary">Past Summits</a>
		</div>
	</section>

	<section class="container features">
		<div class="feature-grid">
			<div class="feature-card">
				<h3>Project</h3>
				<p>Discover our mission to map the RNA virosphere.</p>
				<a href="/about" class="link-arrow">Read more &rarr;</a>
			</div>
			<div class="feature-card">
				<h3>Summits</h3>
				<p>Archive of international RdRp summits and proceedings.</p>
				<a href="/summits" class="link-arrow">Browse archive &rarr;</a>
			</div>
			<div class="feature-card">
				<h3>Contact</h3>
				<p>Get in touch with the RdRp Summit team.</p>
				<a href="/contact" class="link-arrow">Contact us &rarr;</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding: 100px 20px 80px;
	}

	.hero-title {
		font-size: 56px;
		font-weight: 700;
		letter-spacing: -0.005em;
		margin-bottom: 12px;
	}

	.hero-subtitle {
		font-size: 24px;
		color: var(--c-text-secondary);
		max-width: 600px;
		margin: 0 auto 40px;
		line-height: 1.3;
	}

	.cta-group {
		display: flex;
		gap: 16px;
		justify-content: center;
	}

	.button {
		display: inline-block;
		padding: 12px 24px;
		border-radius: 980px; /* Pill shape */
		font-size: 17px;
		font-weight: 500;
		text-align: center;
		transition: all 0.2s ease;
	}

	.button.primary {
		background-color: var(--c-link);
		color: white;
	}
	.button.primary:hover {
		background-color: var(--c-link-hover);
		text-decoration: none;
	}

	.button.secondary {
		background-color: transparent;
		color: var(--c-link);
	}

	.features {
		padding-top: 60px;
		padding-bottom: 60px;
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 30px;
	}

	.feature-card {
		background: white;
		border-radius: 18px;
		padding: 30px;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		border: 1px solid rgba(0,0,0,0.03);
	}

	.feature-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
	}

	.feature-card h3 {
		font-size: 24px;
		margin-bottom: 10px;
	}

	.feature-card p {
		color: var(--c-text-secondary);
		font-size: 15px;
		line-height: 1.5;
	}

	.link-arrow {
		font-size: 14px;
		font-weight: 600;
	}
</style>

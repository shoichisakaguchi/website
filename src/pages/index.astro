---
import Layout from "../layouts/Layout.astro";
import HomeAnnouncements from "../components/HomeAnnouncements.astro";
import { getEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";

export const prerender = true;

// 1. Fetch Key Data
// 1. Fetch Key Data
const summitInfo = await getEntry("summit", "info");
const featuredSummitSlug = summitInfo?.data?.featuredSummit;
const featuredSummit = featuredSummitSlug
	? await getEntry("summits", featuredSummitSlug)
	: null;
const summitData = featuredSummit?.data;

// 2. Determine Phase & Content
const overridePhase = summitInfo?.data?.overridePhase ?? "Auto";
const autoPhase = summitData?.phase ?? "Planning";
const currentPhase = overridePhase === "Auto" ? autoPhase : overridePhase;

const allSummits = await getCollection("summits");
const liveSummitEntry = allSummits.find(
	(summit) => summit.data.phase === "Live",
);
const liveSummitData =
	liveSummitEntry?.data ?? (currentPhase === "Live" ? summitData : null);

const getEditionLabel = (summit: any) => {
	if (!summit) return null;
	const year = summit.year ? String(summit.year) : "";
	const location = summit.location ? summit.location.split(",")[0].trim() : "";
	const label = [year, location].filter(Boolean).join(" ");
	return label || null;
};

const allPeople = await getCollection("people");
const liveEditionLabel = liveSummitData ? getEditionLabel(liveSummitData) : null;
const liveOrganizers = liveEditionLabel
	? allPeople.filter((person) => person.data.edition === liveEditionLabel)
	: [];
const sortedLiveOrganizers = liveOrganizers.sort((a, b) =>
	a.data.name.localeCompare(b.data.name),
);

// Select the top message based on phase
let topMessage = null;
if (currentPhase === "Planning")
	topMessage = summitInfo?.data?.topMessagePlanning;
else if (currentPhase === "Live") topMessage = summitInfo?.data?.topMessageLive;
else if (currentPhase === "Archived")
	topMessage = summitInfo?.data?.topMessageArchived;

// 3. Process Journal Club (Find next meeting)
const allJournalClub = await getCollection("journal-club");
const today = new Date();
// Filter for future meetings (including today)
const upcomingJournalClub = allJournalClub
	.filter((item) => new Date(item.data.date) >= today)
	.sort(
		(a, b) =>
			new Date(a.data.date).valueOf() - new Date(b.data.date).valueOf(),
	)[0];

// Helper for "Add to Calendar" (Google Calendar)
const makeGoogleCalendarUrl = (item: any) => {
	if (!item) return "#";
	const date = new Date(item.data.date);
	const start = date.toISOString().replace(/-|:|\.\d\d\d/g, "");
	// Assume 1 hour duration
	const endDate = new Date(date.getTime() + 60 * 60 * 1000);
	const end = endDate.toISOString().replace(/-|:|\.\d\d\d/g, "");

	const title = encodeURIComponent(`RdRp Journal Club: ${item.data.title}`);
	const details = encodeURIComponent(
		`Speaker: ${item.data.speaker || "TBA"}\nPaper: ${item.data.paperUrl || ""}`,
	);

	return `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${title}&dates=${start}/${end}&details=${details}`;
};

const journalClubCalendarUrl = makeGoogleCalendarUrl(upcomingJournalClub);

import { DocumentRenderer } from "@keystatic/core/renderer";
---

<Layout>
	{/* HERO SECTION: SUMMIT */}
	{
		summitData && (
			<section class={`hero-summit phase-${currentPhase.toLowerCase()}`}>
				<div class="container">
					<span class="eyebrow">
						{currentPhase === "Archived"
							? "Past Event"
							: currentPhase === "Planning"
								? "Planning Phase"
								: "Upcoming Summit"}
					</span>
					<h1 class="summit-title">
						{summitData.title || `RdRp Summit ${summitData.year}`}
					</h1>

					<div class="summit-message">
						{topMessage && (
							<div class="rich-text">
								<DocumentRenderer document={topMessage} />
							</div>
						)}
					</div>

					{/* Live / Archived Details: Show Dates & Venue */}
					{currentPhase !== "Planning" && (
						<div class="summit-info-grid">
							{(summitData.startDate || summitData.location) && (
								<div class="summit-details">
									{summitData.startDate && (
										<div class="detail-item">
											<span class="icon">üìÖ</span>
											<span>
												{new Date(
													summitData.startDate,
												).toLocaleDateString("en-US", {
													month: "long",
													day: "numeric",
												})}
												{summitData.endDate &&
													` ‚Äì ${new Date(summitData.endDate).toLocaleDateString("en-US", { month: "long", day: "numeric" })}`}
												{", "}
												{summitData.year}
											</span>
										</div>
									)}
									{summitData.location && (
										<div class="detail-item">
											<span class="icon">üìç</span>
											<span>
												{summitData.location}
												{summitData.venue &&
													` (${summitData.venue})`}
											</span>
										</div>
									)}
								</div>
							)}

							{/* Keynotes */}
							{summitData.keynotes &&
								summitData.keynotes.length > 0 && (
									<div class="keynotes-section">
										<h3>Keynote Speakers</h3>
										<div class="keynotes-list">
											{summitData.keynotes.map(
												(speaker: any) => (
													<div class="keynote-card">
														{speaker.image && (
															<img
																src={
																	speaker.image
																}
																alt={
																	speaker.name
																}
																class="keynote-img"
															/>
														)}
														<div class="keynote-info">
															<span class="keynote-name">
																{speaker.name}
															</span>
															<span class="keynote-affil">
																{
																	speaker.affiliation
																}
															</span>
														</div>
													</div>
												),
											)}
										</div>
									</div>
								)}
						</div>
					)}

					{/* CTA Buttons */}
					<div class="cta-group">
						{summitData.links?.registration &&
							currentPhase === "Live" && (
								<a
									href={summitData.links.registration}
									class="button primary"
								>
									Register Now
								</a>
							)}
						{summitData.links?.slack && (
							<a
								href={summitData.links.slack}
								class="button secondary"
							>
								Join Slack
							</a>
						)}
						{currentPhase === "Archived" && (
							<a href="/summits" class="button outline">
								View Past Summits
							</a>
						)}
					</div>
				</div>
			</section>
		)
	}

	{currentPhase === "Live" && sortedLiveOrganizers.length > 0 && (
		<section class="organizers-section">
			<div class="container">
				<div class="organizers-header">
					<div>
						<span class="eyebrow">Organizing Team</span>
						<h2 class="organizers-title">
							{liveEditionLabel || "Current Summit"}
						</h2>
					</div>
					<a href="/people" class="link-arrow">
						See all past organizers &rarr;
					</a>
				</div>
				<div class="organizers-grid">
					{sortedLiveOrganizers.map((person) => (
						<article class="organizer-card">
							<div class="organizer-photo">
								<Image
									src={person.data.image}
									alt={person.data.name}
									width={120}
									height={120}
									class="organizer-img"
								/>
							</div>
							<p class="organizer-name">{person.data.name}</p>
						</article>
					))}
				</div>
			</div>
		</section>
	)}

	{/* JOURNAL CLUB SECTION */}
	<section class="journal-section">
		<div class="container journal-grid">
			<div class="journal-info">
				<h2>Journal Club</h2>
				<p class="subtitle">
					Join our bi-weekly discussion on the latest RdRp research.
				</p>
				<div class="calendar-note">
					<p>
						<span class="icon">üïí</span> Time is managed via Google Calendar
						(automatically adjusted to your local timezone).
					</p>
				</div>

				<div class="actions">
					<a
						href="https://slack.com/signin"
						target="_blank"
						class="button small outline">Join Slack</a
					>
					<a href="/journal-club" class="link-arrow"
						>View Schedule &rarr;</a
					>
				</div>
			</div>

			<div class="next-meeting-card">
				{
					upcomingJournalClub ? (
						<>
							<span class="badge">Next Meeting</span>
							<h3 class="paper-title">
								{upcomingJournalClub.data.title}
							</h3>
							<div class="meeting-meta">
								{upcomingJournalClub.data.speaker && (
									<p>
										<strong>Speaker:</strong>{" "}
										{upcomingJournalClub.data.speaker}
									</p>
								)}
								<p>
									<strong>Date:</strong>{" "}
									{new Date(
										upcomingJournalClub.data.date,
									).toLocaleDateString("en-US", {
										weekday: "long",
										month: "long",
										day: "numeric",
									})}
								</p>
							</div>
							<div class="card-actions">
								<a
									href={journalClubCalendarUrl}
									target="_blank"
									class="button small"
								>
									Add to Calendar
								</a>
								{upcomingJournalClub.data.paperUrl && (
									<a
										href={upcomingJournalClub.data.paperUrl}
										target="_blank"
										class="button small secondary"
									>
										Read Paper
									</a>
								)}
							</div>
						</>
					) : (
						<div class="empty-state">
							<h3>No upcoming meetings scheduled</h3>
							<p>Check back later for updates.</p>
						</div>
					)
				}
			</div>
		</div>
	</section>

	{/* ANNOUNCEMENTS & FEATURES */}
	<HomeAnnouncements />

	<section class="container features">
		<div class="feature-grid">
			<div class="feature-card">
				<h3>About</h3>
				<p>Discover our mission to map the RNA virosphere.</p>
				<a href="/about" class="link-arrow">Read more &rarr;</a>
			</div>
			<div class="feature-card">
				<h3>Summits</h3>
				<p>Archive of international RdRp summits and proceedings.</p>
				<a href="/summits" class="link-arrow">Browse archive &rarr;</a>
			</div>
			<div class="feature-card">
				<h3>Contact</h3>
				<p>Get in touch with the RdRp Summit team.</p>
				<a href="/contact" class="link-arrow">Contact us &rarr;</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Global Reused */
	.container {
		max-width: 980px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 12px 24px;
		border-radius: 980px;
		font-size: 16px;
		font-weight: 500;
		text-align: center;
		transition: all 0.2s ease;
		text-decoration: none;
		cursor: pointer;
		line-height: 1;
	}

	.button.primary {
		background-color: var(--c-link);
		color: white;
		border: 1px solid var(--c-link);
	}
	.button.primary:hover {
		background-color: var(--c-link-hover);
		border-color: var(--c-link-hover);
		transform: translateY(-1px);
	}

	.button.secondary {
		background-color: transparent;
		color: var(--c-link);
		border: 1px solid var(--c-link);
	}
	.button.secondary:hover {
		background-color: rgba(0, 112, 243, 0.05);
	}

	.button.small {
		padding: 8px 16px;
		font-size: 14px;
	}
	.button.outline {
		border: 1px solid #ddd;
		color: var(--c-text);
	}
	.button.outline:hover {
		border-color: var(--c-link);
		color: var(--c-link);
	}

	/* Summit Hero */
	.hero-summit {
		padding: 80px 0;
		text-align: center;
		background: linear-gradient(
			180deg,
			rgba(230, 246, 255, 0.5) 0%,
			rgba(255, 255, 255, 0) 100%
		);
		border-bottom: 1px solid rgba(0, 0, 0, 0.03);
		margin-bottom: 40px;
	}

	.eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 12px;
		font-weight: 700;
		color: var(--c-link);
		margin-bottom: 12px;
		display: block;
	}

	.summit-title {
		font-size: 48px;
		font-weight: 800;
		letter-spacing: -0.02em;
		margin-bottom: 24px;
		line-height: 1.1;
	}

	.summit-details {
		display: flex;
		justify-content: center;
		gap: 24px;
		margin-bottom: 32px;
		color: var(--c-text-secondary);
		font-size: 18px;
	}

	.detail-item {
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.cta-group {
		display: flex;
		gap: 16px;
		justify-content: center;
	}

	/* Organizers Section */
	.organizers-section {
		padding: 40px 0 20px;
		margin-top: -10px;
		margin-bottom: 40px;
	}

	.organizers-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		gap: 20px;
		flex-wrap: wrap;
		margin-bottom: 24px;
	}

	.organizers-title {
		font-size: 28px;
		font-weight: 700;
		margin: 0;
	}

	.organizers-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
		gap: 18px;
	}

	.organizer-card {
		background: #fff;
		border: 1px solid rgba(0, 0, 0, 0.05);
		border-radius: 14px;
		padding: 16px;
		text-align: center;
		box-shadow: 0 6px 14px rgba(0, 0, 0, 0.04);
	}

	.organizer-photo {
		width: 96px;
		height: 96px;
		border-radius: 50%;
		overflow: hidden;
		margin: 0 auto 12px;
		background: #eef1f5;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.organizer-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.organizer-name {
		margin: 0;
		font-size: 0.95em;
		font-weight: 600;
		color: var(--c-text);
	}

	/* Journal Club Section */
	.journal-section {
		padding: 60px 0;
		background-color: #fafbfc;
		border-top: 1px solid rgba(0, 0, 0, 0.03);
		border-bottom: 1px solid rgba(0, 0, 0, 0.03);
		margin-bottom: 60px;
	}

	.journal-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
	}

	@media (max-width: 768px) {
		.journal-grid {
			grid-template-columns: 1fr;
			gap: 40px;
		}
	}

	.journal-info h2 {
		font-size: 32px;
		margin-bottom: 12px;
	}

	.subtitle {
		color: var(--c-text-secondary);
		font-size: 18px;
		margin-bottom: 24px;
		line-height: 1.5;
	}

	.actions {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	.next-meeting-card {
		background: white;
		padding: 30px;
		border-radius: 16px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
		border: 1px solid rgba(0, 0, 0, 0.03);
	}

	.badge {
		display: inline-block;
		background-color: #f3e8ff;
		color: #7928ca;
		padding: 4px 10px;
		border-radius: 99px;
		font-size: 12px;
		font-weight: 700;
		text-transform: uppercase;
		margin-bottom: 16px;
	}

	.paper-title {
		font-size: 20px;
		margin-bottom: 16px;
		line-height: 1.4;
	}

	.meeting-meta {
		margin-bottom: 24px;
		font-size: 15px;
		color: #555;
	}

	.meeting-meta p {
		margin: 4px 0;
	}

	.card-actions {
		display: flex;
		gap: 12px;
	}

	/* Features Grid (Bottom) */
	.features {
		padding-top: 20px;
		padding-bottom: 60px;
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 30px;
	}

	.feature-card {
		background: white;
		border-radius: 18px;
		padding: 30px;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
		border: 1px solid rgba(0, 0, 0, 0.03);
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease;
	}

	.feature-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
	}

	.feature-card h3 {
		font-size: 24px;
		margin-bottom: 10px;
	}

	.feature-card p {
		color: var(--c-text-secondary);
		font-size: 15px;
		line-height: 1.5;
		margin-bottom: 16px;
	}

	.link-arrow {
		font-size: 14px;
		font-weight: 600;
		color: var(--c-link);
		text-decoration: none;
	}
	.link-arrow:hover {
		text-decoration: underline;
	}
</style>
